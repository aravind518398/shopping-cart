<section class="mt-5">
  <div class="container">
    <div class="row">

      {{#each products}}

        <div class="col-lg-3 col-md-6">
          <div class="card shadow mt-3" style="">
            <img
              class="mx-auto"
              style="width: 15rem;height:15rem"
              src="/images/{{this._id}}.png"
              class="card-img-top"
              alt="{{this._id}}.png"
            />
            <div class="card-body">
              <h5 class="card-title">{{this.name}}</h5>
              <h5 class="card-title">â‚¹{{this.price}}</h5>
              <p class="card-text">{{this.type}}</p>
              <p class="card-text">{{this.description}}</p>
              
                <button onclick="addToCart('{{this._id}}')" class="btn btn-dark">Add to cart</button>
            </div>
          </div>
        </div>

      {{/each}}

    </div>
  </div>
</section>

<script>
  function addToCart(productId) {
  
    $.ajax({
      
      url:'/add-to-cart/?id='+productId,
      method:'get',
      success:(response) => {
        if(response.status) {
            let count = $('#cart-count').html()
            count = parseInt(count) + 1
            $('#cart-count').html(count)
        }
      
      }
    })
  }
</script>